<div id="artist-albums">
    {{#each albums}}
        <div class="album">
            {{#with images.[0]}}
                <img src="{{this.url}}" alt="">
            {{/with}}
            <p>{{this.name}}</p>
            <a href="/tracks/{{this.id}}">View Tracks</a>
        </div>
    {{/each}}
</div>